<%= form_for [ cocktail, dose ] do |f| %>
  <div class="form-inline">
  <%= f.text_field :description, class: "form-control" %>
  <%= f.select :ingredient_id, options_from_collection_for_select(Ingredient.all, 'id', 'name'), class: "form-control" %>
  </div>


  <div>
  <%= f.submit "Add to receipe", class: "btn btn-success" %>
  </div>


<% end %>