<div class="col-xs-offset-3 col-md-offset-3 col-xs-6 col-md-6">
  <h2 class="text-center">Ajoutez un cocktail</h2>

    <%= simple_form_for(@cocktail, html: { multipart: true }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :picture %>
      </div>

      <div class="form-action">
        <%= f.button :submit %>
      </div>
    <% end %>
</div>






