<h1 class="text-center padded">Cocktails list</h1>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card text-center">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>

          <% if cocktail.picture_file_name %>
            <%= image_tag cocktail.picture.url(:thumb), class: 'img-circle' %>
          <% else %>
            <i class="fa fa-glass padding-top"></i>
          <% end %>



        </div>
      </div>
    <% end %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="card text-center">
        <h2>
          <%= link_to new_cocktail_path do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </h2>
        <p>Ajouter un cocktail</p>
      </div>
    </div>
  </div>
</div>
